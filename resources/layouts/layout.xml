<layout id="WatchFace">
    <drawable id="Hours" class="SaturnRing">
        <param name="group">2048</param>
        <param name="segments">12</param>
    </drawable>
    <drawable id="Minutes" class="SaturnRing">
        <param name="group">4096</param>
        <param name="segments">60</param>
    </drawable>
    <drawable id="Seconds" class="SaturnRing">
        <param name="group">8192</param>
        <param name="segments">60</param>
    </drawable>
    <drawable id="Meridiem" class="SaturnRing">
        <param name="group">1024</param>
        <param name="segments">2</param>
        <param name="active">true</param>
    </drawable>
</layout>